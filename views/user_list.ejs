<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
    <div class="user-list-page-container">
        <h1>Users</h1>
        <ol>
            <% results.forEach(function(user) {%>
                <li class="user-list-item">
                    <a href="/users/<%= user.id %>" class="user-list-text"><%= user.name %></a> 
                </li>
            <% }); %>
        </ol>
    </div>

    <div class="page-turn-container">
        <%if (previous) { %>
            <a href="<%= previous %>" class="page-button">
                <i class="fas fa-arrow-left"></i> Previous</a>
        <% } %>
        <%if (next) { %>
            <a href="<%= next %>" class="page-button">Next <i class="fas fa-arrow-right"></i></a>
        <% } %>
    </div>

</body>
<%- include('_footer') -%>
</html>